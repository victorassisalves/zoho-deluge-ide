{
  "manifest_version": 3,
  "name": "Zoho Deluge Advanced IDE",
  "version": "3.1.0",
  "description": "V1 Structural Base - No Firebase",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.zoho.com/*",
    "https://deluge.zoho.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.zoho.com/*",
        "https://*.zoho.eu/*",
        "https://*.zoho.in/*",
        "https://*.zoho.com.au/*",
        "https://*.zoho.jp/*",
        "https://*.zoho.ca/*",
        "https://*.zoho.uk/*",
        "https://*.zoho.com.cn/*",
        "https://deluge.zoho.com/*",
        "https://deluge.zoho.eu/*",
        "https://deluge.zoho.in/*",
        "https://deluge.zoho.com.au/*",
        "https://deluge.zoho.jp/*",
        "https://deluge.zoho.ca/*",
        "https://deluge.zoho.uk/*",
        "https://deluge.zoho.com.cn/*"
      ],
      "js": [
        "src/content-loader.js"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "commands": {
    "activate-ide": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Activate IDE (Open tab or Side Panel)"
    },
    "sync-save": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Sync and Save to Zoho"
    },
    "sync-save-execute": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Sync, Save and Execute"
    },
    "pull-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Pull Code from Zoho"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "src/*",
        "ide.html",
        "loader-init.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
