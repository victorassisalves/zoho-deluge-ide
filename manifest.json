{
  "manifest_version": 3,
  "name": "Zoho Deluge Advanced IDE",
  "version": "1.3.0",
  "description": "A full-featured IDE for Zoho Deluge with Workspaces and Online Sync.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://*.zoho.com/*",
    "https://*.zoho.eu/*",
    "https://*.zoho.in/*",
    "https://*.zoho.com.au/*",
    "https://*.zoho.jp/*",
    "https://generativelanguage.googleapis.com/*",
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*",
    "https://*.firebaseapp.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.zoho.com/*",
        "https://*.zoho.eu/*",
        "https://*.zoho.in/*",
        "https://*.zoho.com.au/*",
        "https://*.zoho.jp/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "commands": {
    "open-ide": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open Deluge IDE"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ide.html",
        "assets/*",
        "bridge.js",
        "firebase-config.js",
        "deluge-lang.js",
        "ide.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
